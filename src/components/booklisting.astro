---
import { Image } from 'astro:assets';
interface Props {
    title: string;
    rating?: string;
    image: ImageMetadata;
    description?: string;
}
const { title, rating, image, description } = Astro.props;
---


<div class="book-listing">
        <Image 
            src={image}
            alt={title} 
            class="book-cover"
            width={800}
        />
        <div class="book-info">
        <h3>{title}</h3>
        <p class="description">
            {description ? description : <slot />}
        </p>
        <p class="rating">{rating}</p>
    </div>
</div>

<style>
    .book-listing {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 1rem;
        margin: 1rem 0;
    }
    
    .book-cover {
        width: 120px;
        height: auto;
        object-fit: cover;
        border-radius: 4px;
        flex-shrink: 0; 
    }
    
    .book-info {
        flex: 1;
    }
    
    .book-info h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.5rem;
    }
    
    .description {
        margin: 0 0 0.5rem 0;
        font-size: 0.9rem;
    }
    
    .rating {
        margin: 0;
        font-style: italic;
        font-size: 0.85rem;
    }
</style>