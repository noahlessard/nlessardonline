---
// this is the layout that defines the inital layout of each page on the website
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body>
    <header>
        <nav>
            <a href="/">Home</a>
            <a href="/now">Now</a>
            <a href="/books">Books</a>
        </nav>
    </header>
    <main>
        <slot /> <!-- this is where the content gets inserted -->
    </main>
</body>
</html>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f8fB;
        margin: 0;
        padding: 0;
    }
    
    main {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }
</style>