---
// this is the layout that defines the inital layout of each page on the website
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body>
    <header>
        <nav>
            <a href="/">Home</a>
            <a href="/projects">Projects</a>
            <a href="/now">Now</a>
            <a href="/books">Books</a>
        </nav>
    </header>
    <main>
        <slot /> <!-- this is where the content gets inserted -->
    </main>
</body>
</html>

<style is:global>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f8fB;
        margin: 0;
        padding: 0;
    }
    
    main {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .centered-image {
        display: block;
        margin: 0 auto;
        max-width: 50%;
        height: auto;
    }

    .chk {
    background: #f5f1ee;
    border: 1px solid #e8dfd8;
    border-radius: 4px;
    padding: 0.25em 0.4em;
    color: #2c2c2c;
    font-size: 0.9em;
    display: inline;
    }
</style>